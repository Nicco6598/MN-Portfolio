    "baseline-browser-mapping": "^2.9.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "next lint --fix",
      "prettier --write"
    ],
    "*.{md,json}": "prettier --write"
  }
}