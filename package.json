    "baseline-browser-mapping": "^2.10.0",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "next lint --fix",
      "prettier --write"
    ],
    "*.{md,json}": "prettier --write"
  }
}